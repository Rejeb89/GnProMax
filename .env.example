# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=erp_starter_dev

# Node Environment
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_key_change_this_in_production_with_strong_random_string
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production_with_strong_random_string
JWT_REFRESH_EXPIRATION=7d

# API
API_PORT=3000
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_ROUNDS=10

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
